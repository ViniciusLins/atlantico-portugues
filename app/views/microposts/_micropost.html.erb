<li>
  <span class="content"><%= wrap(micropost.content) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %>
  </span>
  <% if current_user?(micropost.user) %>
    <%= render partial: 'shared/delete_micropost', locals: { feed_item: micropost } %>
  <% end %>
</li>
