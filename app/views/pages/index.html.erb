<% provide(:title, t('.title')) %>
<h1><%= t('.title')%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped table-bordered .col-md-6">
      <thead>
        <tr>
          <th class="col-md-5"><%= t('.titlePag')%></th>
          <th class="col-md-2">
            <div id="btn-new-page">
              <%= link_to t('.new'), new_page_path, class: "btn btn-large btn-primary" %>
            </div>
          </th>
        </tr>
      </thead>

      <tbody>
        <%= render @pages %>
      </tbody>
    </table>
  </div>
</div>

