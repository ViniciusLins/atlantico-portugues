<% provide(:title, t('.title')) %>
<h1><%= t('.title') %></h1>


<div class="paginate-center">
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t 'users.name' %></th>
          <th class="col-md-2">
            <% if current_user.admin? %>
              <div id="btn-new-user">
                <%= link_to I18n.t('users.index.create'), 
                  signup_path, class: "btn btn-large btn-primary" %>
              </div>
            <% end %>
          </th>
        </tr>
      </thead>

      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  </div>
</div>

<div class="paginate-center">
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>
