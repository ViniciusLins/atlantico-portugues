#!/bin/bash
chown -R www-data:www-data .   # or some other user
chmod 755 .
# populate the app directory with your files, if you haven't done so already
chown -R www-data:www-data log
chmod 755 log   # see notes
chmod 644 log/* # see notes

mkdir -p public/uploads/tmp  # might not exist yet
chown -R www-data:www-data public/uploads
chmod 755 public/uploads
chmod 755 public/uploads/tmp
chown -R www-data:www-data public/system
chmod 755 public/system
chmod 755 public/system
